class Solution {
    public int longestConsecutive(int[] nums) {        
        if (nums.length == 0) {
            return 0;
        }

        Set<Integer> set = new HashSet<>();

        for (int i = 0; i < nums.length; i++) {
            set.add(nums[i]);
        }

        int length = 1;
        int max = 1;
        for (int num : set) {
            if (set.contains(num - 1)) {
                continue;
            }
            int temp = num;
            while (set.contains(temp + 1)) {
                temp++;
                length++;
            }
            max = Math.max(max,length);
            length = 1;
        }

        return max;
    }
}
