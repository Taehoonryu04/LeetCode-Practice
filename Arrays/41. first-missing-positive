class Solution {
    public int firstMissingPositive(int[] nums) {
        int n = nums.length;
        //If not contains 1, return 1
        boolean one = true;
        for (int i = 0; i < n; i++) {
            if (nums[i] == 1) {
                one = false;
                break;
            }
        }
        if (one) {
            return 1;
        }
        //Change all the values not within the range of integers
        for (int i = 0; i < n; i++) {
            if (nums[i] <= 0 || nums[i] > n) {
                nums[i] = 1;
            }
        }
        //Convert the positive into negative in the index if not 1
        for (int i = 0; i < n; i++) {
            int a = Math.abs(nums[i]);

            if (a == n) {
                nums[0] = -Math.abs(nums[0]);
            } else {
                nums[a] = -Math.abs(nums[a]);
            }
        }
        //If there is positive index, it will the smallest integer
        for (int i = 1; i < n; i++) {
            if (nums[i] > 0) {
                return i;
            }
        }
        if (nums[0] > 0) {
            return n;
        }
        return n + 1;
    }
}
