class Solution {
    public int minEatingSpeed(int[] piles, int h) {
        int left = 1, right = 1;
        for (int pile : piles) {
            right = Math.max(right, pile);
        }
        while (left < right) {
            int mid = left + (right - left) / 2;
            if (finish(piles, mid, h)) right = mid;
            else left = mid + 1;
        }
        return left;
    }

    private boolean finish(int[] piles, int k, int h) {
        int sum = 0;
        for (int pile : piles) {
            sum += (pile % k == 0) ? pile / k : pile / k + 1;
        }
        return sum <= h;
    }
}
