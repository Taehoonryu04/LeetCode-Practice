class KthLargest {
    private PriorityQueue<Integer> heap;
    private int s;

    public KthLargest(int k, int[] nums) {
        heap = new PriorityQueue<>();
        s = k;
        for (int n : nums) {
            add(n);
        }
    }
    
    public int add(int val) {
        if (heap.size() < s) heap.offer(val);
        else if (val > heap.peek()) {
            heap.offer(val);
            heap.poll();
        }
        return heap.peek();
    }
}
