class Solution {
    public boolean checkInclusion(String s1, String s2) {
        if (s2.length() < s1.length()) {
            return false;
        }
        int[] i1 = new int[26];
        int[] i2 = new int[26];
        for (int i = 0; i < s1.length(); i++) {
            i1[s1.charAt(i) - 'a']++;
            i2[s2.charAt(i) - 'a']++;
        }
        for (int i = 0; i < s2.length() - s1.length(); i++) {
            if (same(i1,i2)) {
                return true;
            }
            i2[s2.charAt(i + s1.length()) - 'a']++;
            i2[s2.charAt(i) - 'a']--;
        }
        return same(i1,i2);
    }

    private boolean same(int[] x, int[] y) {
        for (int i = 0; i < 26; i++) {
            if (x[i] != y[i]) {
                return false;
            }
        }
        return true;
    }
}
