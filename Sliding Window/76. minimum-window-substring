class Solution {
    public String minWindow(String s, String t) {
        if (s.length() == 0 || t.length() == 0 || s.length() < t.length()) {
            return "";
        }
        Map<Character, Integer> map = new HashMap<>();
        for (int i = 0; i < t.length(); i++) {
            map.put(t.charAt(i), map.getOrDefault(t.charAt(i), 0) + 1);
        }
        int l = 0, r = 0, length = 0;
        int require = map.size();
        int create = 0;
        int[] ans = {-1, 0, 0};
        Map<Character, Integer> submap = new HashMap<>();
        while (r < s.length()) {
            char c = s.charAt(r);
            int count = submap.getOrDefault(c, 0);
            submap.put(c, count + 1);
            if (map.containsKey(c) && submap.get(c).intValue() == map.get(c).intValue()) {
                create++;
            }
            while (l <= r && require == create) {
                c = s.charAt(l);
                if (ans[0] == -1 || ans[0] > r - l + 1) {
                    ans[0] = r - l + 1;
                    ans[1] = l;
                    ans[2] = r;
                }
                submap.put(c, submap.get(c) - 1);
                if (map.containsKey(c) && submap.get(c).intValue() < map.get(c).intValue()) {
                    create--;
                }
                l++;
            }
            r++;
        }
        if (ans[0] == -1) {
            return "";
        }
        return s.substring(ans[1], ans[2] + 1);
    }
}
