class Solution {
    public int[] dailyTemperatures(int[] temperatures) {
        int[] index = new int[temperatures.length];
        Stack<Integer> s = new Stack<>();
        for (int i = 0; i < temperatures.length; i++) {
            while (!s.isEmpty() && temperatures[s.peek()] < temperatures[i]) {
                int x = s.pop();
                index[x] = i - x;
            }
            s.push(i);
        }
        return index;
    }
}
