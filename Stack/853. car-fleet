class Solution {
    public int carFleet(int target, int[] position, int[] speed) {
        int n = position.length;
        double[][] cars = new double[n][2];
        for (int i = 0; i < n; i++) {
            cars[i][0] = position[i];
            cars[i][1] = (double) (target - position[i]) / speed[i];
        }
        Arrays.sort(cars, (a,b) -> Double.compare(b[0], a[0]));
        int counter = 0;
        double max = 0;
        for (double[] car : cars) {
            if (car[1] > max) {
                counter++;
                max = car[1];
            }
        }
        return counter;
    }
}
