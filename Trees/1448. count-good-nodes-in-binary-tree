class Solution {
    int ans = 0;
    public int goodNodes(TreeNode root) {
        if (root == null) return ans;
        helper(root, root.val);
        return ans;
    }

    private void helper(TreeNode root, int max) {
        if (root == null) return;
        if (root.val >= max) {
            ans++;
            max = root.val;
        }
        helper(root.left, max);
        helper(root.right, max);
    }
}
