class Solution {
    char[][] fullboard = null;
    ArrayList<String> answer = new ArrayList<String>();

    public List<String> findWords(char[][] board, String[] words) {
        TrieNode root = new TrieNode();
        //Create Trie for words
        for (String s : words) {
            TrieNode node = root;
            for (Character c : s.toCharArray()) {
                if (node.children.containsKey(c)) node = node.children.get(c);
                else {
                    TrieNode temp = new TrieNode();
                    node.children.put(c, temp);
                    node = temp;
                }
            }
            node.word = s;
        }
        //Search word from the board using helper method
        this.fullboard = board;
        for (int row = 0; row < board.length; row++) {
            for (int col = 0; col < board[0].length; col++) {
                if (root.children.containsKey(board[row][col])) {
                    helper(row, col, root);
                }
            }
        }
        return answer;
    }

    private void helper(int row, int col, TrieNode root) {
        Character c = fullboard[row][col];
        TrieNode temp = root.children.get(c);
        //When successfully find the word
        if (temp.word != null) {
            this.answer.add(temp.word);
            temp.word = null;
        }
        //Temporarily change visited character into #
        fullboard[row][col] = '#';
        //Sets to check 4 directions from current character
        int[] rowSet = {-1, 0, 1, 0};
        int[] colSet = {0, 1, 0, -1};
        //Iterate through sets: if there is next letter within 4 directions, move on to next trienode
        for (int i = 0; i < 4; i++) {
            int newR = row + rowSet[i];
            int newC = col + colSet[i];
            if (newR < 0 || newC < 0 || newR >= fullboard.length || newC >= fullboard[0].length) continue;
            else if (temp.children.containsKey(fullboard[newR][newC])) helper(newR, newC, temp);
        }
        //Return # to original character
        fullboard[row][col] = c;
        if (temp.children.isEmpty()) root.children.remove(c);
    }
}

class TrieNode {
    HashMap<Character, TrieNode> children = new HashMap<Character, TrieNode>();
    String word = null;
    public TrieNode(){}
}
