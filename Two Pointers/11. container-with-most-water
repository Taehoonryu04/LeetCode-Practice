class Solution {
    public int maxArea(int[] height) {
        int max = 0;
        int right = height.length - 1;
        int left = 0;
        while (right != left) {
            max = Math.max(max, (right - left) * Math.min(height[right], height[left]));
            if (height[right] < height[left]) {
                right--;
            } else {
                left++;
            }
        }
        return max;
    }
}
