class Solution {
    public String longestPalindrome(String s) {
        if (s.length() == 1) {
            return s;
        }
        String ans = "";
        for (int i = 0; i < s.length(); i++) {
            ans = check(s, i, i, ans);
            ans = check(s, i, i + 1, ans);
        }
        return ans;
    }

    private String check(String s, int l, int r, String max) {
        while (l >= 0 && r < s.length() && s.charAt(l) == s.charAt(r)) {
            l--;
            r++;
        }
        if (r - l - 1 > max.length()) {
            return s.substring(l + 1, r);
        }
        return max;
    }
}